{
  "name": "font-vector-editor",
  "version": "1.0.0",
  "description": "A macOS Electron app for editing font vector outlines",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "package": "unset ELECTRON_RUN_AS_NODE && npm run build && electron-builder --mac"
  },
  "dependencies": {
    "fonteditor-core": "^2.6.3",
    "opentype.js": "^1.3.4",
    "polygon-clipping": "^0.15.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^40.6.1",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.fontvectoreditor.app",
    "productName": "Font Vector Editor",
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
